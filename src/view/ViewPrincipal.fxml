<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PrincipalController">
   <children>
      <MenuBar>
         <menus>
            <Menu mnemonicParsing="false" text="Arquivo">
               <items>
                  <MenuItem fx:id="MenuClose" mnemonicParsing="false" onAction="#onMenuCloseAction" text="Sair" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Cadastro">
               <items>
                  <MenuItem fx:id="MenuUsuario" mnemonicParsing="false" onAction="#onMenuUsuarioAction" text="Usuários" />
                  <MenuItem fx:id="MenuTipoConta" mnemonicParsing="false" onAction="#onMenuTipoContaAction" text="Tipo Conta" />
                  <MenuItem fx:id="MenuTipoPagamento" mnemonicParsing="false" onAction="#onMenuTipoPagamentoAction" text="Tipo Pagamento" />
                  <MenuItem fx:id="MenuTipoTransacao" mnemonicParsing="false" onAction="#onMenuTipoTransacaoAction" text="Tipo Transação" />
                  <MenuItem fx:id="MenuProdutos" mnemonicParsing="false" onAction="#onMenuProdutosAction" text="Produtos / Estoque" />
                  <MenuItem fx:id="MenuClienteFornecedorFuncionario" mnemonicParsing="false" onAction="#onMenuCFFAction" text="Cliente / Fornecedor / Funcionário" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Financeiro">
               <items>
                  <MenuItem fx:id="MenuContasaPagarReceber" mnemonicParsing="false" onAction="#onMenuPRAction" text="Contas A Pagar/Receber" />
                  <MenuItem fx:id="MenuParcelamento" mnemonicParsing="false" onAction="#onMenuParcelamentoAction" text="Parcelamento" />
                  <MenuItem fx:id="MenuVenda" mnemonicParsing="false" onAction="#onMenuVendaAction" text="Venda" />
                  <MenuItem fx:id="MenuCaixaEmpresa" mnemonicParsing="false" onAction="#onMenuCaixaEmpresaAction" text="Caixa Empresa" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Relatórios">
               <items>
                  <Menu mnemonicParsing="false" text="Venda">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Venda por Período" />
                        <MenuItem fx:id="relVendasUnitario" mnemonicParsing="false" onAction="#AoAcionarrelVendasUnitario" text="Venda Unitário" />
                     </items>
                  </Menu>
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Ajuda">
               <items>
                  <MenuItem fx:id="MenuSobre" mnemonicParsing="false" onAction="#onMenuSobreAction" text="Sobre o Sistema" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </children>
</VBox>
